{% extends "../../layout.jinja2" %}
{% block content %}
<div class="row mb-5">
    <div class="col-12 col-lg-7">
        <div class="card shadow">
            <div class="card-header">
                <h2 class="h4 my-3 ps-2">{{title}}</h2>
            </div>
            <div class="card-body">
                <div class="mb-3 pt-2 ps-2">
                    <p>You are required to setup a form of multi-factor authentication (MFA) for your account.</p>
                    <p>Please download and open an app such as Google or Microsoft Authenticator and scan the QR code that is located to the right to start the setup process.</p>
                    <p>Once setup in your authenticator app, please input a verification code provided:</p>
                    <form method="post">
                        <!-- Verification Code -->
                        <div class="row">
                            <div class="col-12 mb-3 mb-lg-0">
                                <label for="authVerificationCode" class="col-form-label fw-medium">Authenticator Verification Code</label>
                                <input type="text" class="form-control" name="authVerificationCode" id="formauthVerificationCode" autocomplete="off" />
                                <span id="authVerificationCodeError" class="text-danger small pt-3"></span>
                                {% if error_message %}
                                    <p class="text-danger mt-3 mb-0">{{error_message}}</p>
                                {% endif %}
                            </div>
                        </div>
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary mt-4">Submit Verification Code</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4 offset-lg-1">
        <div class="card shadow">
            <div class="card-header">
                <h2 class="h4 my-3 ps-2">QR Code</h2>
            </div>
            <div class="card-body">
                <div class="mb-3 pt-2 ps-2">
                    {% if qr_image %}
                        <p class="text-center"><img class="img-fluid" style="width: 70%;" src="{{ qr_image }}" alt="QR Code" /></p>
                    {% else %}
                        <p>No image data available.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}