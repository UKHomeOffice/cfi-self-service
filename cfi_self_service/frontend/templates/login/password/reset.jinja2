{% extends "../../layout.jinja2" %}
{% block content %}
<div class="row">
    <div class="col-12 col-lg-7">
        <div class="card shadow">
            <div class="card-header">
                {% if title == "Login - Forced Password Reset Request" %}
                    <h2 class="h5 my-3 ps-2">Your password has expired - please set a new password before logging in</h2>
                {% else %}
                    <h2 class="h5 my-3 ps-2">Please set a new password and input the verification code that has been sent to your inbox</h2>
                {% endif %}
            </div>
            <div class="card-body">
                <div class="mb-3 pt-2 ps-2">
                    <form method="post">
                        <!-- Email Address -->
                        <div class="row mb-3">
                            <div class="col-12 mb-3 mb-lg-0">
                                <label for="emailAddress" class="col-form-label">Email Address</label>
                                <input type="email" class="form-control" name="emailAddress" id="formEmailAddress" />
                                <span id="emailAddressError" class="text-danger small pt-3"></span>
                            </div>
                        </div>
                        <!-- New Password -->
                        <div class="row mb-3">
                            <div class="col-12 mb-3 mb-lg-0">
                                <label for="newPassword" class="col-form-label">New Password</label>
                                <input type="password" class="form-control" name="newPassword" id="formNewPassword" />
                                <span id="newPasswordError" class="text-danger small pt-3"></span>
                            </div>
                        </div>
                        {% if title == "Login - Password Reset" %}
                            <!-- Verification Code -->
                            <div class="row mb-3">
                                <div class="col-12 mb-3 mb-lg-0">
                                    <label for="verificationCode" class="col-form-label">Password Reset Verification Code</label>
                                    <input type="text" class="form-control" name="verificationCode" id="formVerificationCode" />
                                    <span id="verificationCodeError" class="text-danger small pt-3"></span>
                                </div>
                            </div>
                        {% endif %}
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary mt-4">Request Password Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4 offset-lg-1">
        <!-- Need Assistance? -->
        <div class="card shadow">
            <div class="card-header">
                <h2 class="h4 my-3 ps-2">Need assistance?</h2>
            </div>
            <div class="card-body">
                <div class="mb-3 pt-2 ps-2">
                    <p>If you require further assistance or have encountered persistent issues, please feel free contact the support team on Slack at <span class="text-primary">#cfi-self-service-support</span>.</p>
                    <a role="button" class="btn btn-outline-primary mt-2" href="#">Open Slack Channel</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}