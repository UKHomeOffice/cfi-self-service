{% extends "../layout.jinja2" %}
{% block content %}
<form method="post">
    <div class="row">
        <!-- Test Environment -->
        <div class="col-12 mb-5 col-md-6 mb-lg-0 col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <i class="bi bi-pc-display menu-icon"></i>
                </div>
                <div class="card-body">
                    <p class="mt-2 mb-1"><small>Environment</small></p>
                    <h5 class="card-title fw-medium">Test</h5>
                    <div class="input-group mt-4 mb-3">
                        <span class="input-group-text"><i class="bi bi-link"></i></span>
                        <input type="text" class="form-control" name="testEnvironmentURL" />
                    </div>
                </div>
            </div>
        </div>
        <!-- Development Environment -->
        <div class="col-12 mb-5 col-md-6 mb-lg-0 col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <i class="bi bi-pc-display menu-icon"></i>
                </div>
                <div class="card-body">
                    <p class="mt-2 mb-1"><small>Environment</small></p>
                    <h5 class="card-title fw-medium">Development</h5>
                    <div class="input-group mt-4 mb-3">
                        <span class="input-group-text"><i class="bi bi-link"></i></span>
                        <input type="text" class="form-control" name="devEnvironmentURL" />
                    </div>
                </div>
            </div>
        </div>
        <!-- Production Environment -->
        <div class="col-12 mb-5 col-md-6 mb-lg-0 col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <i class="bi bi-pc-display menu-icon"></i>
                </div>
                <div class="card-body">
                    <p class="mt-2 mb-1"><small>Environment</small></p>
                    <h5 class="card-title fw-medium">Production</h5>
                    <div class="input-group mt-4 mb-3">
                        <span class="input-group-text"><i class="bi bi-link"></i></span>
                        <input type="text" class="form-control" name="prodEnvironmentURL" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Submit Button -->
    <div class="mt-4 text-end">
        <button type="submit" class="btn btn-success"><i class="bi bi-link-45deg me-2"></i> Update URL's</button>
    </div>
</form>
{% endblock content %}